          </Menu>
          <Menu mnemonicParsing="false" text="View">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#onMenuViewClients" text="Clients" />
                  <MenuItem mnemonicParsing="false" onAction="#onMenuViewMainDescription" text="Main Description" />
              <MenuItem mnemonicParsing="false" onAction="#onMenuViewSubDescription" text="Sub Description" />
                  <MenuItem mnemonicParsing="false" onAction="#onMenuViewSuppliers" text="Suppliers" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Add">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#onMenuAddClient" text="Client" />
